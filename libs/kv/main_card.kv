#: import SlideTransition kivy.uix.screenmanager.SlideTransition
#: import MusicScreen libs.baseclass.screens.MusicScreen
#: import PlaylistsScreen libs.baseclass.screens.PlaylistsScreen
#: import FavoritesScreen libs.baseclass.screens.FavoritesScreen
#: import AboutScreen libs.baseclass.screens.AboutScreen
#: import SettingsScreen libs.baseclass.screens.SettingsScreen


<MainCard>:
    x: 0
    y: 0
    size_hint: (1, 1)
    orientation: 'vertical'

    # Toolbar
    MDBoxLayout:
        adaptive_height: True
        orientation: 'horizontal'
        spacing: '10dp'

        MDIconButton:
            icon: 'menu'
            on_release:
                root.toggle()
        # MDIconButton

        MDLabel:
            id: toolbar_title
            text: 'Music'
            bold: True
            font_size: '20sp'
        # MDLabel
    # MDBoxLayout
    # Toolbar

    ScreenManager:
        id: main_card_screen_manager
        transition: SlideTransition(duration=0.1, direction='right')
        on_current:
            toolbar_title.text = self.current[:-7].capitalize()

        MusicScreen:
            id: music_screen
        # MusicScreen

        PlaylistsScreen:
        # PlaylistsScreen

        FavoritesScreen:
        # FavoritesScreen

        AboutScreen:
        # AboutScreen

        SettingsScreen:
        # SettingsScreen
    # ScreenManager
# MainCard

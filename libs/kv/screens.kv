#: import SongsTab libs.baseclass.tabs.SongsTab
#: import AlbumsTab libs.baseclass.tabs.AlbumsTab
#: import ArtistsTab libs.baseclass.tabs.ArtistsTab


<MusicScreen>:
    name: 'music_screen'

    MDTabs:
        id: music_screen_tabs
        lock_swiping: True
        tab_hint_x: True
        tab_indicator_anim: True
        anim_duration: 0.1
        text_color_active: app.theme_cls.accent_color
        text_color_normal: (1, 1, 1, 1)

        AlbumsTab:
        # AlbumsTab

        SongsTab:
        # SongsTab

        ArtistsTab:
        # ArtistsTab
    # MDTabs
# MusicScreen


<PlaylistsScreen>:
    name: 'playlists_screen'
    MDLabel:
        text: 'playlists'
        halign: 'center'
# PlaylistsScreen


<FavoritesScreen>:
    name: 'favorites_screen'
    MDLabel:
        text: 'favorites'
        halign: 'center'
# FavoritesScreen


<AboutScreen>:
    name: 'about_screen'
    MDLabel:
        text: 'about'
        halign: 'center'
# AboutScreen


<SettingsScreen>:
    name: 'settings_screen'

    ScrollView:

        MDGridLayout:
            adaptive_height: True
            cols: 1
            padding: '10dp'
            spacing: '10dp'

            MDBoxLayout:
                orientation: 'horizontal'
                adaptive_height: True
                padding: '5dp'
                spacing: '10dp'

                MDLabel:
                    text: 'Dark mode'
                    font_size: '20dp'
                # MDLabel

                MDSwitch:
                    on_active: app.toggle_theme_style(*args)
                # MDSwitch
            # MDBoxLayout
        # MDGridLayout
    # ScrollView
# SettingsScreen
